<!DOCTYPE html>
<html ng-app="module.auth">
    <head>
        <title>Login</title>
        <!--<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.css">
        <link rel="stylesheet" href="/css/auth.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
        <!--<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.js"></script>
        <script src="/js/module.auth.js"></script>
    </head>
    <body ng-controller="module.auth.controller as auth">

        <p class="mainHomeButton">
            <a class="waves-effect waves-light btn-large" href="/">Home</a>
        </p>

<!-- Nav tabs -->
    <div class="row">
        <div class="col s12 m5">
            <div class="card-panel white">
                <div class="row">
                    <div class="col s12">
                        <ul class="tabs">
                            <li class="tab col s3"><a href="#test1">Login</a></li>
                            <li class="tab col s3"><a href="#test2">Register</a></li>
                        </ul>
                    </div>

            <!--Login view-->
                <div id="test1" class="col s12">
                    <div id="login" role="tabpanel" class="tab-pane active">
                        <form ng-submit="auth.login.submit($event)">
                            <h1>Login</h1>
                                <fieldset class="form-group">
                                    <label class="sr-only" for="email">Email</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"></div>
                                        <input required placeholder="Email" class="form-control" type="text" ng-model="auth.payload.email"/>
                                    </div>
                                </fieldset>

                                <fieldset class="form-group">
                                    <label class="sr-only" for="password">Password</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                        <input required placeholder="Password" class="form-control" type="password" ng-model="auth.payload.password"/>
                                    </div>
                                </fieldset>

                                <input class="btn btn-primary" type="submit" value="Login">
                                <p ng-class="auth.login.alert">{{ auth.login.message }}</p>
                            </form>
                    </div>
                </div>

            <!--Register view-->
                <div id="test2" class="col s12">
                    <div id="register" role="tabpanel" class="tab-pane">
                            <form ng-submit="auth.register.submit($event)">
                                <h1 class="text-center">Register</h1>

                                    <fieldset class="form-group">
                                        <label class="sr-only" for="name">Name</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                            <input required placeholder="Name" class="form-control" type="text" ng-model="auth.payload.name"/>
                                        </div>
                                    </fieldset>

                                    <fieldset class="form-group">
                                        <label class="sr-only" for="email">Email</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"></div>
                                            <input required placeholder="Email" class="form-control" type="text" ng-model="auth.payload.email"/>
                                        </div>
                                    </fieldset>

                                    <fieldset class="form-group">
                                        <label class="sr-only" for="password">Password</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                            <input required placeholder="Create a password" class="form-control" type="password" ng-model="auth.payload.password"/>
                                        </div>
                                    </fieldset>

                                <button class="btn btn-primary" type="submit">Register</button>
                                <p ng-class="auth.register.alert">{{ auth.register.message }}</p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>